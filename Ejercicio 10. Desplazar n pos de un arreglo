System.out.println("Digite la cantidad de pos a desplazar ");
        pos = entrada.nextInt();
        
        for (int vuelta =1; vuelta <= pos; vuelta ++){
            ultimo = numero[7];
            for (int i=6; i>=0; i--){
                numero[i+1] = numero [i];
            }
            numero[0] = ultimo;
        }
        for (int i=0; i<7; i++){
            System.out.print(numero[i]);
        }
    }
