System.out.println("Digite en numero");
        valor = entrada.nextInt();
        System.out.println("Digite la pos");
        pos = entrada.nextInt();
        
        for (int i=7; i>=pos; i--){
            numero[i+1] = numero[i];  
        }
        
       numero[pos] = valor;
        
        System.out.println("Arreglo");
        for (int i=0; i<=9; i++){
            System.out.print(numero[i] + " ");
        }
    }
